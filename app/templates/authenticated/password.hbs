{{page-title "Password"}}
<div class="antialiased text-gray-900 px-6">
  <div class="max-w-xl mx-auto py-12 divide-y md:max-w-4xl">

    <div class="py-6">
      <h2 class="text-2xl font-bold">Account Settings</h2>

      <div class="mt-12 max-w-md">

        <form class="grid grid-cols-1 gap-6" {{on "submit" this.setupPassword}}>

          <label class="block">
            <span class="text-gray-700">Email</span>
            <Input
              @type="email"
              @value={{this.session.data.authenticated.user.email}}
              disabled
              class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 disabled:opacity-50 disabled:cursor-not-allowed"
              placeholder="email@domain.com"
            />
          </label>
          <label class="block">
            <span class="text-gray-700">New Password</span>
            <Input
              @type="password"
              @value={{this.password}}
              class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0"
              placeholder="********"
            />

          </label>

          <button
            type="submit"
            disabled={{this.isRequesting}}
            class="shadow bg-blue-900 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
          >
            Save password
          </button>

          {{#if this.errorMessage}}
            <div class="flex justify-center">
              <p class="bg-yellow-200 text-yellow-800 py-2 px-4 rounded-2xl text-sm">
                <i>{{this.errorMessage}}</i>
              </p>
            </div>

          {{/if}}

        </form>

      </div>
    </div>
  </div>
</div>
