<nav class="z-50 w-full bg-white top-0 flex flex-wrap items-center justify-between px-1 py-2 shadow-lg">
  <div class="container mx-auto flex flex-wrap items-center justify-between">

    <div class="w-full relative flex justify-between lg:w-auto lg:static lg:block lg:justify-start">

      <LinkTo @route="application" class="text-sm font-bold leading-relaxed inline-block mr-4 py-2 pl-4 whitespace-nowrap uppercase text-blueGray-700">
        sommer.jetzt
      </LinkTo>

      {{#if this.session.isAuthenticated}}


        <ul class="hidden lg:flex flex-row list-none py-2 pr-4">
          <li class="flex items-center">
            <LinkTo @route="authenticated.password" class="lg:hover:text-blueGray-200 text-blueGray-700 px-3 lg:py-2 flex items-center text-xs uppercase font-boldx">
              password
            </LinkTo>
          </li>
        </ul>

        <Dropdown class="ml-auto">

          <:trigger as |toggleDropdown|>
            <button
              type="button"
              class="px-3 py-1 flex items-center text-3xl text-gray-700 hover:text-gray-500 ml-auto"
              {{on "click" toggleDropdown}}
            >
              {{svg-jar "icon-user"}}
            </button>
          </:trigger>

          <:menu as |closeDropdown|>
            <div class="px-4 py-3 border-b">
              <p class="text-sm leading-5">Signed in as</p>
              <p class="text-sm font-medium leading-5 text-gray-900 truncate">tom@example.com</p>
            </div>

              <Dropdown::Link @route="authenticated.password" {{on "click" closeDropdown}}>
                <span>
                  Password
                </span>
              </Dropdown::Link>

              <Dropdown::Button {{on "click" this.logout}} {{on "click" closeDropdown}}>
                <span>
                  Sign out
                </span>
              </Dropdown::Button>

          </:menu>

        </Dropdown>
      {{/if}}

    </div>

  </div>


</nav>
