
<form
  aria-label="File Upload Modal"
  class="h-full flex flex-col bg-whitexshadow-xlxborder rounded-md color-dark"
  {{on "submit" this.uploadAll}}
  {{on "drop" this.onDrop}}
  {{on "dragover" this.onDragover}}
  {{on "dragleave" this.onDragleave}}
  {{on "dragenter" this.onDragenter}}
  ...attributes
>
  <section class="h-full overflow-auto p-8 w-full h-full flex flex-col">

    <div
      class="
        border-dashed border-2 rounded-md py-12 flex flex-col justify-center items-center
        {{if this.isDragover "border-blue-400" "border-gray-400"}}
      "
    >
      <span class={{if this.isDragover "pointer-events-none "}}>
        <svg class="fill-current w-12 h-12 mb-3 text-gray-300" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <path d="M19.479 10.092c-.212-3.951-3.473-7.092-7.479-7.092-4.005 0-7.267 3.141-7.479 7.092-2.57.463-4.521 2.706-4.521 5.408 0 3.037 2.463 5.5 5.5 5.5h13c3.037 0 5.5-2.463 5.5-5.5 0-2.702-1.951-4.945-4.521-5.408zm-7.479-1.092l4 4h-3v4h-2v-4h-3l4-4z" />
        </svg>

        <p class="mb-3 font-semibold text-gray-900 flex flex-wrap justify-center">
          <span>Drop files to upload</span>
        </p>


        <input
          type="file"
          id={{this.uniqueLabelId}}
          class="hidden"
          multiple={{or @multiple false}}
          accept="image/*"
          {{on "change" this.onFileSelect}}
        >


        <label
          class="mt-2 rounded-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:shadow-outline focus:outline-none"
          for={{this.uniqueLabelId}}
        >
          Upload a file
        </label>

      </span>
    </div>

  </section>

  <ul class="flex flex-1 flex-wrap -m-1 px-8">
    {{#each this.files as |fileObject|}}
      <li class="block p-1">
        <article
          tabindex="0"
          class="w-full h-full p-2 roundedxshadowxbg-gray-100"
        >
          <div class="w-32 relative">
            <Forms::Button
              class="absolute right-0 top-0 transform -translate-y-1/3 translate-x-1/3"
              @isRound={{true}}
              {{on "click" (fn this.removeFile fileObject)}}
            >
              {{svg-jar "icon-close" class="h-3 w-3" stroke-width="4"}}
            </Forms::Button>
            {{!-- <button class="p-2 rounded-full bg-blue-600 text-white  hover:bg-blue-500 focus:outline-none focus:bg-blue-500 absolute right-0 top-0 transform -translate-y-1/2 translate-x-1/2">
              x
            </button> --}}
            <div>
              <img
                alt={{fileObject.file.name}}
                class="object-cover w-full h-32 rounded shadow mb-1"
                {{dom/image-src fileObject.file}}
              >
            </div>
            <p class="leading-5">
              <div class="truncate">
                {{fileObject.file.name}}
              </div>
              <div class="text-gray-500">
                {{format/filesize fileObject.file.size}}
              </div>
            </p>
          </div>
          {{!-- rounded-md focus:outline-none focus:shadow-outline bg-gray-100 cursor-pointer relative text-transparent hover:text-white shadow-sm border-4 border-gray-200 bg-gray-200 --}}

        </article>
      </li>
    {{else}}
      <li class="h-full w-full text-center flex flex-col items-center justify-center items-center">
        <img class="mx-auto w-32" src="https://user-images.githubusercontent.com/507615/54591670-ac0a0180-4a65-11e9-846c-e55ffce0fe7b.png" alt="no data" />
        <span class="text-small text-gray-500">No files selected</span>
      </li>
    {{/each}}
  </ul>
