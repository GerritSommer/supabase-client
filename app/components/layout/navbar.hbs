<nav class="z-50 w-full bg-white top-0 flex flex-wrap items-center justify-between px-1 py-2 md:py-1 shadow-lg">
  <div class="container mx-auto flex flex-wrap items-center justify-between">

    <div class="w-full relative flex items-center justify-between">
      <h1>
        <LinkTo
          @route="application"
          class="text-sm font-bold leading-relaxed inline-block mx-2 py-2 px-2 whitespace-nowrap uppercase text-blueGray-700"
        >
          sommer.jetzt
        </LinkTo>
      </h1>

      <ul class="hidden lg:flex flex-row list-none py-2 pr-4">
        {{yield to="menu-items"}}
      </ul>

      {{#if this.session.isAuthenticated}}
        <Controls::Dropdown class="ml-auto">

          <:trigger as |toggleDropdown|>
            <button
              type="button"
              class="px-3 py-1 flex items-center text-3xl text-gray-700 hover:text-gray-500 ml-auto"
              {{on "click" toggleDropdown}}
            >
              {{svg-jar "icon-user"}}
            </button>
          </:trigger>

          <:menu as |closeDropdown|>

            <Controls::Dropdown::Link
              @route="authenticated.account"
              class="px-4 py-3 border-b flex-col"
              {{on "click" closeDropdown}}
            >
              <p class="text-sm leading-5">Signed in as</p>
                <p class="text-sm font-medium leading-5 text-blue-500 truncate">
                {{this.current.user.email}}
              </p>
            </Controls::Dropdown::Link>
{{!--
            <Controls::Dropdown::Button {{on "click" closeDropdown}}>
