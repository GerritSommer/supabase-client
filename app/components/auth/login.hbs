<div class="flex h-full">
  <form class="self-center w-full max-w-sm mx-auto p-4" {{on "submit" this.login}}>

    <div class="flex justify-center">
      {{svg-jar "logo" width="4em" height="4em"}}
    </div>

    <div class="mb-4">
      {{#let (unique-id)  as |id|}}
        <Forms::Label for={{id}}>
          Email
        </Forms::Label>

        <Forms::Input
          @type="email"
          @value={{this.email}}
          id={{id}}
          placeholder="jane-doe@email.com"
        />
      {{/let}}
    </div>

    <div class="mb-4">
      {{#let (unique-id) as |id|}}
        <Forms::Label for={{id}}>
          Password
        </Forms::Label>

        <Forms::Input
          @type="password"
          @value={{this.password}}
          id={{id}}
          placeholder="******************"
        />
      {{/let}}
    </div>

    <div class="flex justify-center space-around mt-6">
      <Forms::Button
        type="submit"
        disabled={{this.isRequesting}}
      >
        Login
      </Forms::Button>
      &nbsp;
      <LinkTo
        @route="application"
        disabled={{this.isRequesting}}
        class="hover:bg-gray-50 focus:shadow-outline focus:outline-none text-gray font-bold py-2 px-4 rounded"
      >
        Cancel
      </LinkTo>

    </div>

    {{#if this.errorMessage}}
      <div class="flex justify-center mt-4 mb-2">
        <p class="bg-yellow-200 text-yellow-800 py-2 px-4 rounded-2xl text-sm">
          <i>{{this.errorMessage}}</i>
        </p>
      </div>
    {{/if}}

  </form>

</div>
